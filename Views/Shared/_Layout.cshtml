<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Messenger - @ViewBag.Title</title>
    @Styles.Render("~/Content/HomeStyleSheet.css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="header">
        <div class="container">
            <div class="header__inner">
                <a class="logo" href="/Home/Index">Messenger</a>
                <input style="border-radius: 7px; padding: 5px" type="search" name="search__input" placeholder="Search" />
                <a href="">Search</a>
                <ul class="menu__list">
                    <li class="menu__item">
                        <a class="menu__item-link" href="/Home/Contact">Contacts</a>
                    </li>
                    <li class="menu__item">
                        <a class="menu__item-link" id="settings" href="#">Settings</a>
                    </li>
                    <li class="menu__item">
                        <a class="menu__item-link" href="/Home/About">About</a>
                    </li>
                </ul>
                @{
                    if (!System.Web.HttpContext.Current.User.Identity.IsAuthenticated)
                    {
                        <div class="btn__wrapper">
                            <a class="signIn" id="signIn" href="/Account/Login">Sign In</a>
                            <a class="signUp" id="signUp" href="/Account/Register">Sign Up</a>
                        </div>
                    }
                    else
                    {
                        <div class="btn__wrapper">
                            <a class="user" href="#">@System.Web.HttpContext.Current.User.Identity.Name</a>
                            <a class="logout" href="#" onclick="CallLogout()">Log-out</a>
                        </div>
                    }
                }
            </div>
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/HomePageScript.js")
    @RenderSection("scripts", required: false)
</body>
</html>
